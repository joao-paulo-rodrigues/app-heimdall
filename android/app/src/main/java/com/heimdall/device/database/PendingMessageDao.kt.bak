package com.heimdall.device.database

import androidx.room.Dao
import androidx.room.Insert
import androidx.room.Query
import androidx.room.Update

@Dao
interface PendingMessageDao {
    @Insert
    suspend fun insert(message: PendingMessage)

    @Query("SELECT * FROM pending_messages ORDER BY timestamp ASC")
    suspend fun getAllPending(): List<PendingMessage>

    @Query("DELETE FROM pending_messages WHERE id = :id")
    suspend fun delete(id: Long)

    @Update
    suspend fun update(message: PendingMessage)
}

